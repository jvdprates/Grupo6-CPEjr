<body>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 text-center">
        <h1>Minha Carteira</h1>
      </div>
    </div>
  </div>
</body>


<table class="table table-dark">
  <thead>
    <tr>
      <th scope="col">Sigla</th>
      <th scope="col">Quantidade</th>
      <th scope="col">Redimento absoluto</th>
      <th scope="col">Rendimento percentual</th>
      <!-- <th scope="col">Quantidade de pepéis</th>
      <th scope="col">Valor do papel</th>
      <th scope="col">Data da compra</th> -->
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
      <tr>
        <td></td>
        <td>{{quantity}}</td>
        <td>R$ </td>
        <td> %</td>
        <!-- <td>{{absolutRevenue}}</td>
        <td>{{quantity}}</td>
        <td>R$ {{investedAmount}}</td>
        <td>{{date}}</td> -->
        <td>
          <a class="btn btn-primary p-0" title="Adicionar para a carteira" data-toggle="collapse" href="#collapse{{sigla}}" role="button" aria-expanded="false" aria-controls="collapseExample" style="height: 38px; width: 38px;">
            <i class="material-icons" style="line-height: unset;">add</i>
          </a>
        </td>
      </tr>
      <tr>
        <td colspan="100" class="p-0 border-top-0">
          <div class="collapse" id="collapse{{sigla}}">
            <div class="p-2">
              <div class="col-sm-6">
                <div class="row">
                  <div class="col-sm-4 text-center">
                    <p>Valor investido</p>
                    <p>R$ {{totalinvestedAmount}}</p>
                  </div>
                  <div class="col-sm-4 text-center">
                    <p>Valor atual</p>
                    <p>R$00,00</p>
                  </div>
                </div>
                <div class="row ml-3 mt-2">
                  <p>Rendimento da última semana: 0%</p>
                </div>
                  <div class="row ml-3">
                    <p>Data da compra: </p>
                    <p>{{date}}</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>
