<div class="container-fluid" style="max-width: 350px; min-width: 200px;">
  <div class="row">
    <img src="imagens/logo.png" class="mx-auto" width="200px" height="200px" />
  </div>
  <h2>Registrar:</h2>
  <form class="w-100" action="/registrar" method="post">
    <fieldset>
      <div class="form-group">
        <label for="email">Endereço de email:</label>
        <input type="email" placeholder="Email" name="user[email]" class="form-control" id="email" required>
      </div>
      <div class="form-group">
        <label for="pwd">Senha:</label>
        <input type="password" placeholder="Senha" name="user[password]" class="form-control" id="password" required>
      </div>
      <div class="form-group">
        <label for="pwd">Confirmar senha:</label>
        <input type="password" placeholder="Confirmação da senha" name="user[confirmPassword]" class="form-control" id="confirmPassword" required>
      </div>
    </fieldset>
    <div class="col-sm-12 p-0 ml-0">
      <button type="submit" class="btn btn-primary mb-2" id="createUserButton">Criar Nova Conta</button>
      <button type="button" class="btn btn-secondary mb-2" onclick="location.href='./'">Voltar</button>
    </div>
  </form>
</div>
</div>
</div>
